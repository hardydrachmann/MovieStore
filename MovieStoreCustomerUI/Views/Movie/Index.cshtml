@model IEnumerable<MovieStoreBE.Movie>

@{
    ViewBag.Title = "Index";
}

<style>
    .poster {
        height: 5em;
    }
</style>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>

            <td>
                <a href="~/Movie/Details/@item.Id"><button> Buy </button></a>
            </td>
        </tr>
    }

</table>
